{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "pvname"
  },
  "spec": {
    "capacity": {
        "storage": "XGi"
    },
    "accessModes": [ "ReadWriteOnce" ],
    "nfs": {
        "path": "/export/path",
        "server": "nfs_ip"
    },
    "persistentVolumeReclaimPolicy": "Recycle"
  }
}
